<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<form action="/users" method="POST">
  <input type="hidden"
    name="form_authenticity_token"
    value="<%= form_authenticity_token %>">
  <label>Name
    <input type="text" name="user[name]" value="<%= @user.name %>">
  </label>

  <label>Email
    <input type="text" name="user[email]" value="<%= @user.email %>">
  </label>

  <input type="submit">
</form>
